$primary-color = #bdc6e1
$body-padding = 0.5em
$body-border
	content ''
	overflow auto
	display block
	position fixed
	background-color $primary-color
	z-index 1000
$container
	margin 0 auto 2em auto
	width 95%

// Main content
// Body border
html:before
	@extends $body-border
	top 0
	left @top
	right @top
	height $body-padding
html:after
	@extends $body-border
	bottom 0
	left @bottom
	right @bottom
	height $body-padding
body
	padding $body-padding
	&:before
		@extends $body-border
		top 0
		bottom @top
		left @top
		width $body-padding
	&:after
		@extends $body-border
		top 0
		bottom @top
		right @top
		width $body-padding

