#content
	padding-bottom 9.375rem

// Map
.observed-snowfall
	height 55vh
	&__map
		height 100%
		width 100%

// Legend
.legend
	box-shadow 0 7px 9px 7px rgba($offblack, 0.4)
	background-color $offwhite
	padding 2em
	position fixed
	bottom -100%
	width 100%
	transition bottom 0.25s
	z-index 99

	&.show
		bottom 0

	&__title
		font-size 0.8em
		margin-bottom 0.5em
	&__list
		column-count 5
		column-gap 0
		+mq('bp-2')
			column-count 12
	&__term
		font-size 0.6rem
		margin-bottom 0.25em
		color lighten($offblack, 20)
		&:not(:nth-of-type(3n+1)):not(:last-of-type)
			display none
			+mq('bp-2')
				display block
	&__def
		border-top 1px solid $offwhite
		border-bottom @border-top
		width 100%
		height 0.75rem
		for i in (1..12)
			&:nth-of-type({i})
				background-color $legend['scale-' + i]
		&:last-of-type
			border-right @border-top
		&:first-of-type
			border-left @border-top
		&:not(:nth-of-type(3n+1)):not(:last-of-type)
			display none
			+mq('bp-2')
				display block

// Updated
.updated
	font-size 0.6rem
	position absolute
	top 0.5rem
	right 0.5rem
	padding 0.25em
	background-color rgba($primary-color, 0.25)
	z-index 2000


//buttons
.snowfall-buttons
	margin 0 auto 2rem auto
	display flex

	&.ready
		border 1px solid #999

.snowfall-buttons button
	padding 0.9rem
	font-size 0.9rem
	background-color white
	border 0
	margin 0
	display block
	transition background-color 0.5s ease
	&:disabled
		background-color #efefef
		color black

	&:not(:last-of-type)
		border-right 1px solid #999

.snowfall-buttons button:hover
	background-color #efefef

.snowfall-buttons button:active
	background-color #efefef

.interactive
