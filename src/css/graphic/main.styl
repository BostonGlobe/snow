$primary-color = #A0D2DB
$body-padding = 1em
$body-border
	content ''
	overflow auto
	display block
	position fixed
	background-color rgba($primary-color, 0.7)
	z-index 1000

// Main content
// Body border
html:before
	@extends $body-border
	top 0
	left @top
	right @top
	height $body-padding
html:after
	@extends $body-border
	bottom 0
	left @bottom
	right @bottom
	height $body-padding
body
	padding $body-padding
	&:before
		@extends $body-border
		top 0
		bottom @top
		left @top
		width $body-padding
	&:after
		@extends $body-border
		top 0
		bottom @top
		right @top
		width $body-padding

main
	margin 2em auto
	width 95%

// Intro
.intro
	text-align center
	margin-bottom 2em
	&__hed
		font-size 2rem
		+mq('bp-2')
			font-size 3.5rem
		mark
			background-color transparent
			position relative
			color darken($primary-color, 40)

	&__search
		font-size 2rem
		border none
		border-bottom 5px solid $primary-color
		transition 0.2s ease-in-out background-color
		width 100%
		padding-left 3rem
		+mq('bp-2')
			font-size 3.5rem
		&::placeholder
			color $offblack
		&:focus
			background-color rgba($primary-color, 0.25)

// Search overrides
div.awesomplete
	z-index 10000
	&:before
		content ''
		display block
		position absolute
		left 0.5rem
		bottom 1rem
		background-image url($assets-path + 'search.svg')
		background-repeat no-repeat
		background-size contain
		width 1.5rem
		height @width
		opacity 0.7
		+mq('bp-2')
			bottom 2rem
	> ul
		font-size 1.5rem
		text-align left
		border-radius 0px
		border 5px solid rgba($primary-color, 0.5)
		background-color white
		&:before
			display none
		> li
			// only display 5 results at a time
			&:nth-child(n+6)
				display none
			[aria-selected="true"]
				background-color darken($primary-color, 40)

// Map
.observed-snowfall
	width 100%
	height 65vh
	&--map
		width 100%
		height 100%
