$primary-color = #A6B1E1
$body-padding = 1em
$body-border
	content ''
	overflow auto
	display block
	position fixed
	background-color $primary-color
	z-index 1000

// Main content
html:before
	@extends $body-border
	top 0
	left @top
	right @top
	height $body-padding
html:after
	@extends $body-border
	bottom 0
	left @bottom
	right @bottom
	height $body-padding
body
	padding $body-padding
	&:before
		@extends $body-border
		top 0
		bottom @top
		left @top
		width $body-padding
	&:after
		@extends $body-border
		top 0
		bottom @top
		right @top
		width $body-padding

main
	margin 2em auto
	width 95%

// Intro
.intro
	text-align center
	margin-bottom 2em
	&__hed
		font-size 2rem
		+mq('bp-2')
			font-size 3.5rem
		mark
			background-color transparent
			position relative
			color darken($primary-color, 40)
